<Controls:MetroWindow
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfClient" x:Class="WpfClient.MainWindow"
        Title="Collections" Height="985" Width="1657" ShowIconOnTitleBar="True">
    <Controls:MetroWindow.Resources>




        <LinearGradientBrush x:Key="CanvasGameStarted" StartPoint="0,0.5" EndPoint="1,0.5" Opacity="0.5">
            <LinearGradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="#FF556A53"/>
                    <GradientStop Color="#FF64DA21" Offset="0.5"/>
                </GradientStopCollection>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CanvasGameStopped" StartPoint="0,0.5" EndPoint="1,0.5" Opacity="0.5">
            <LinearGradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="#FF2F8000" Offset="0" />
                    <GradientStop Color="Silver" Offset="1" />
                </GradientStopCollection>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </Controls:MetroWindow.Resources>

    <Controls:MetroWindow.WindowCommands>
        <Controls:WindowCommands>
            <Button Content="settings" Click="Button_Click"  />

        </Controls:WindowCommands>
    </Controls:MetroWindow.WindowCommands>

    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>

            <local:SettingsFlyout Header="Settings" Position="Right" CanCloseFlyout="True" />

        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="229*"/>
            <ColumnDefinition Width="855*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="312*"/>
            <ColumnDefinition Width="209*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="gridGameArea" Margin="547,129,40,368" Grid.Column="1" Grid.ColumnSpan="4">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

        </Grid>


        <!--<Grid>
            <Rectangle Stroke="Red" Fill="Blue"/>
            <TextBlock>some text</TextBlock>
        </Grid>-->
        <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled"  x:Name="lstCollectionTypes" HorizontalAlignment="Left" Height="176" Margin="32,612,0,0" VerticalAlignment="Top" Width="630" RenderTransformOrigin="0.5,0.5" SelectedIndex="0" FontSize="16" SelectionChanged="lstCollectionTypes_SelectionChanged" SelectionMode="Single" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn  Width="{Binding RelativeSource={RelativeSource FindAncestor, 
                                        AncestorType=ListView}, Path=ActualWidth}"
						DisplayMemberBinding="{Binding Key}" Header="COLLECTIONS"  />

                </GridView>
            </ListView.View>




        </ListView>
        <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled"  x:Name="lstActions" HorizontalAlignment="Left" Height="111" Margin="32,821,0,0" VerticalAlignment="Top" Width="630" SelectedIndex="0" RenderTransformOrigin="0.5,0.5" FontSize="16" Grid.ColumnSpan="2">


            <ListView.View>
                <GridView>
                    <GridViewColumn  Width="{Binding RelativeSource={RelativeSource FindAncestor, 
                                        AncestorType=ListView}, Path=ActualWidth}"
						Header="ACTIONS"  />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnStart" Content="Start" Margin="238,21,159,0" VerticalAlignment="Top" Click="btnStart_Click" Grid.Column="3" Height="25" Grid.ColumnSpan="2"/>
        <Button Content="Stop" Click="btnStop_Click" Margin="74,21,11,909" Grid.Column="4" Height="24" VerticalAlignment="Top"/>

        <local:UCTypes x:Name="ucTypes" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="549" Width="617"/>
        <RichTextBox x:Name="txtLog" Grid.Column="1" HorizontalAlignment="Left" Height="290" Margin="547,642,0,0" VerticalAlignment="Top" Width="833" Grid.ColumnSpan="4">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Controls:MetroWindow>

