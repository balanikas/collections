<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:command="http://www.galasoft.ch/mvvmlight"
    xmlns:controls="clr-namespace:WpfClient.Controls"
    x:Class="WpfClient.Views.PlayMode"
    mc:Ignorable="d"
    d:DesignHeight="1000" d:DesignWidth="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0"  Orientation="Horizontal">
            <Button x:Name="BtnStart" Content="start" 
                Command="{Binding CmdStart}"   />
            <Button x:Name="BtnStop" Content="stop" 
                Command="{Binding CmdStop}" />
        </StackPanel>



        <avalonedit:TextEditor Grid.Row="1" Grid.Column="0" Background="White"
                                   x:Name="AvalonEdit"
                                   FontFamily="Consolas"
                                   FontSize="10pt"
                                   HorizontalScrollBarVisibility="Auto"
                                   SyntaxHighlighting="C#" ShowLineNumbers="True" 
                                   Document="{Binding CodeDocument}" >

                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <command:EventToCommand PassEventArgsToCommand="True"
                                                    Command="{Binding CmdCodeDocumentTextChanged}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </avalonedit:TextEditor>
        <DockPanel Grid.Row="1" Grid.Column="1" LastChildFill="True">
           
            <Canvas x:Name="Canvas" DockPanel.Dock="Top" >

                <Canvas.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF1B3C13" Offset="0.008" />
                        <GradientStop Color="#FF173410" Offset="1" />
                        <GradientStop Color="#FF458935" Offset="0.682" />
                    </RadialGradientBrush>
                </Canvas.Background>

                <Ellipse Fill="{Binding CanvasColor}"  Width="204" Height="183" Canvas.Left="144" Canvas.Top="227"></Ellipse>
                <Label FontSize="40" Content="{Binding ExecutionTime}" ></Label>
            </Canvas>
        </DockPanel>

        <Expander Grid.Row="1" Grid.Column="1" Header="Log" ExpandDirection="Up" HorizontalAlignment="Stretch" DockPanel.Dock="Bottom"
                  Opacity="0.9" IsExpanded="True" Height="500" VerticalAlignment="Bottom" >
            <DockPanel>
                <Button Content="Clear log" Command="{Binding CmdClearLog}" DockPanel.Dock="Top" />
                <controls:LogViewer DockPanel.Dock="Bottom" />
            </DockPanel>
        </Expander>

    </Grid>
</UserControl>