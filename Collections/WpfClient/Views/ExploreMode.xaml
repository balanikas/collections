<UserControl x:Class="WpfClient.Views.ExploreMode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.WPF45"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:views="clr-namespace:WpfClient.Views"
             xmlns:controls="clr-namespace:WpfClient.Controls"
             xmlns:viewModels="clr-namespace:WpfClient.ViewModels"
             mc:Ignorable="d"
              d:DataContext="{d:DesignInstance Type=viewModels:ExploreModeViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <DockPanel Grid.Column="0" Grid.Row="0" LastChildFill="True" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <Button Content="Clear Canvas" Command="{Binding CmdClearCanvas}" DockPanel.Dock="Top" />
            <views:TypesView x:Name="TypesView" />
        </DockPanel>


        <GridSplitter Grid.Column="1" Grid.Row="0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="#FF2F2F2F"
                      ShowsPreview="True"
                      Width="5" />
        <DockPanel Grid.Column="2" Grid.Row="0" Margin="10,10,10,10">
           

            <Canvas x:Name="Canvas">
                <Canvas.Background>
                    <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/canvas_background.jpg" TileMode="Tile" />
                </Canvas.Background>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDown">
                        <cmd:EventToCommand PassEventArgsToCommand="True"
                                            Command="{Binding CmdMouseDown}" />
                    </i:EventTrigger>

                </i:Interaction.Triggers>
            </Canvas>
        </DockPanel>

        
        <Expander Grid.Row="0" Grid.Column="2" Header="Log" ExpandDirection="Up" HorizontalAlignment="Stretch"
                  Opacity="0.9" IsExpanded="True" Height="300" VerticalAlignment="Bottom">
            <DockPanel>
                <Button Content="Clear log" Command="{Binding CmdClearLog}" DockPanel.Dock="Top" />

                <controls:LogViewer />

            </DockPanel>

        </Expander>
        <Expander DataContext="{Binding InfoView}" Grid.Row="0" Grid.Column="2" Header="Info" ExpandDirection="Down" HorizontalAlignment="Stretch"
                  Opacity="0.9" IsExpanded="False" Height="150" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label Content="Type" Grid.Column="0" Grid.Row="0"></Label>
                <Label Content="{Binding Path= Message.ObjectType}" Grid.Column="1" Grid.Row="0"></Label>
                <Label Content="Method" Grid.Column="0" Grid.Row="1"></Label>
                <Label Content="{Binding Path= Message.Summary.MethodName}" Grid.Column="1" Grid.Row="1"></Label>
                <Label Content="Progress" Grid.Column="0" Grid.Row="2"></Label>
                <Label Content="{Binding Path= Message.Progress}" Grid.Column="1" Grid.Row="2"></Label>

                <Label Content="ExecutionTime" Grid.Column="0" Grid.Row="3"></Label>
                <Label Content="{Binding Path= Message.ExecutionTime}" Grid.Column="1" Grid.Row="3"></Label>


                <Label Content="AvgMethodExecTime" Grid.Column="2" Grid.Row="0"></Label>
                <Label Content="{Binding Path= Message.Summary.AvgMethodExecutionTimeInMs}" Grid.Column="3" Grid.Row="0"></Label>
                <Label Content="Executions" Grid.Column="2" Grid.Row="1"></Label>
                <Label Content="{Binding Path= Message.Summary.ExecutionsCount}" Grid.Column="3" Grid.Row="1"></Label>

                <Label Content="MaxMethodExecTime" Grid.Column="2" Grid.Row="2"></Label>
                <Label Content="{Binding Path= Message.Summary.MaxMethodExecutionTime}" Grid.Column="3" Grid.Row="2"></Label>
                <Label Content="MinMethodExecTime" Grid.Column="2" Grid.Row="3"></Label>
                <Label Content="{Binding Path= Message.Summary.MinMethodExecutionTime}" Grid.Column="3" Grid.Row="3"></Label>

             
            </Grid>

        </Expander>

    </Grid>
</UserControl>