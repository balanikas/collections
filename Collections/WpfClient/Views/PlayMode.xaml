<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" x:Class="WpfClient.Views.PlayMode"
             mc:Ignorable="d"
             d:DesignHeight="1000" d:DesignWidth="1000">

    <Grid VerticalAlignment="Stretch" >
        <Grid Margin="0,47,0,0"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <avalonedit:TextEditor Background="Snow" Grid.Column="0" Grid.RowSpan="2"
			x:Name="AvalonEdit"
			FontFamily="Consolas"
			FontSize="10pt"
			HorizontalScrollBarVisibility="Auto"
			SyntaxHighlighting="C#" ShowLineNumbers="True"  TextChanged="avalonEdit_TextChanged"    >

            </avalonedit:TextEditor>

            <DockPanel Grid.Row="2" Grid.ColumnSpan="2" >
                <Button Content="Clear"  DockPanel.Dock="Bottom" />
                <RichTextBox x:Name="TxtLog" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" >
                    <FlowDocument>

                    </FlowDocument>
                </RichTextBox>


            </DockPanel>

            <Canvas  x:Name="Canvas"  Grid.RowSpan="2" Grid.Column="1" >
                <Canvas.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF1B3C13" Offset="0.008"/>
                        <GradientStop Color="#FF173410" Offset="1"/>
                        <GradientStop Color="#FF458935" Offset="0.682"/>
                    </RadialGradientBrush>
                </Canvas.Background>
                <Label x:Name="lbl" Content="Label" Canvas.Left="26" Canvas.Top="128" Width="452" Height="94"/>


            </Canvas>

        </Grid>
        <Button x:Name="BtnStart" Content="start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Click="btnStart_Click" Margin="10,5,0,0" RenderTransformOrigin="-2.579,0.593"/>
        <Button x:Name="BtnStop" Content="stop" HorizontalAlignment="Left" Margin="102,5,0,0" VerticalAlignment="Top" Width="75" Click="btnStop_Click"/>
    </Grid>
</UserControl>